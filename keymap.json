[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    // "context": "Editor",
    "bindings": {
      "ctrl-x ctrl-s": "workspace::Save",
      "ctrl-c": "editor::Copy",
      "ctrl-v": "editor::Paste",
      "super-c": "editor::Copy",
      "super-v": "editor::Paste",
      "super-x": "editor::Cut",
      "super-s": "workspace::Save",
      "ctrl-a": "editor::MoveToBeginningOfLine",
      "ctrl-e": "editor::MoveToEndOfLine",
      "super-z": "editor::Undo",
      "super-f": "buffer_search::Deploy"
    }
  }
]
